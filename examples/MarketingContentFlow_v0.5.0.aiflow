{
  "metadata": {
    "name": "MarketingContentFlow",
    "version": "0.5.0",
    "description": "Genereert blogartikelen en social posts uit een contentidee.",
    "created": "2025-12-05T10:00:00Z",
    "modified": "2025-12-05T10:00:00Z"
  },
  "flow": {
    "start": "agent_strategist",
    "logic": {
      "agent_strategist": [
        {
          "if": "output.approved == true",
          "then": "agent_writer",
          "description": "Ga schrijven zodra de strategie is goedgekeurd."
        }
      ],
      "agent_writer": [
        {
          "if": "true",
          "then": "agent_social",
          "description": "Na het artikel altijd social snippets genereren."
        }
      ]
    }
  },
  "agents": {
    "agent_strategist": {
      "name": "ContentStrategist",
      "role": "Planner",
      "provider": "openai",
      "model": "gpt-4-turbo",
      "prompt": "strategy_prompt.txt",
      "config": {
        "temperature": 0.7,
        "max_tokens": 1000
      },
      "tools": ["trend_analysis"],
      "output_format": "json",
      "description": "Ontwerpt een korte contentstrategie op basis van een onderwerp."
    },
    "agent_writer": {
      "name": "BlogWriter",
      "role": "Writer",
      "provider": "anthropic",
      "model": "claude-3-opus",
      "prompt": "writer_prompt.txt",
      "config": {
        "temperature": 0.8,
        "max_tokens": 3000
      },
      "output_format": "markdown",
      "description": "Schrijft een long-form blogartikel in markdown."
    },
    "agent_social": {
      "name": "SocialMediaManager",
      "role": "Marketer",
      "provider": "google",
      "model": "gemini-2.5-flash",
      "prompt": "social_prompt.txt",
      "config": {
        "temperature": 0.9,
        "max_tokens": 500
      },
      "output_format": "json",
      "description": "Genereert korte social posts (3 tweets + 1 LinkedIn)."
    }
  },
  "tools": {
    "trend_analysis": {
      "type": "http",
      "endpoint": "https://api.trends.com/v1",
      "method": "GET",
      "description": "Analyses van actuele markt- en zoektrends."
    }
  },
  "memory": {
    "enabled": false
  }
}
